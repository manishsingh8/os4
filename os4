#include<string.h>
#include<stdio.h>
#include<stdlib.h>
int main()
{
printf("\t>>OPERATING SYSTEM PROJECT<<\t");
float avg_wt,avg_tat;
int a[20],p[20],b[20],t[20],i=0,j,n=5,total=0,pos,temp;
printf("\n\n**Reading CPU_BURST.txt File**\n\n");
FILE *fp = fopen("CPU_BURST.txt", "r");
for(i=0;i<=5;i++)
{
while((getc(fp))!=EOF)
{
fscanf(fp, "%d", &a[i]);
if(a[i]>1)
{ 
i++;
p[i]=i+11; 
}         
}
i=i+2;
n=i;
}
for(i=0;i<n;i++)
{
pos=i;
for(j=i+1;j<n;j++)
{
if(a[j]<a[pos])
pos=j;
}
temp=a[i];
a[i]=a[pos];
a[pos]=temp;
temp=p[i];
p[i]=p[pos];
p[pos]=temp;
}
b[0]=0;
for(i=1;i<n;i++)
{    
b[i]=0;    
for(j=0;j<i;j++)
b[i]+=a[j];    
total+=b[i];
}
avg_wt=(float)total/n;      
total=0;
printf("\nProcess\t    Burst Time    \tWaiting Time\tTurnaround Time");   
